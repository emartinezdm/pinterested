<p id="notice"><%= notice %></p>
  <div class="row">
     <div class="col-md-offset-2 col-md-8">
      <div class="panel panel-default">
       <div class="panel-heading center"><%= image_tag @pin.image.url(:medium) %></div>
         <div class="panel-body">
           <strong>Description:</strong>
            <%= @pin.description %><br />
